<div class="col-md-12">
    <div class="modal-dialog" style="margin-bottom:0">
        <div class="modal-content">
                    <div class="panel-heading">
                        <h3 class="panel-title">Fazer Login</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="login.ib" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="E-mail" name="login" type="email" autofocus="">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Senha" name="senha" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Lembrar minha senha?
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button id="confirmar" class="btn btn-success">Confirmar Login</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
    </div>
</div>